<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.netseven.mistergestor" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Badge">
        <param name="android-package" value="de.appplant.cordova.plugin.badge.Badge" />
    </feature>
    <name>Mr. Gestor</name>
    <description>
        O Mr. Gestor é um sistema de gestão empresarial para MEI, Pequenas e Medias Empresas. 
    </description>
    <author email="sac@netseven.com.br" href="http://www.netseven.com.br">
        Netseven Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon qualifier="ldpi" src="res/icon/android/ldpi.png" />
    <icon qualifier="mdpi" src="res/icon/android/mdpi.png" />
    <icon qualifier="hdpi" src="res/icon/android/hdpi.png" />
    <icon qualifier="xhdpi" src="res/icon/android/xhdpi.png" />
    <icon qualifier="xxhdpi" src="res/icon/android/xxhdpi.png" />
    <icon qualifier="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
    <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="250" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="android-minSdkVersion" value="26" />
</widget>
